<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="editpanels.lua"/>

    <Frame virtual="true" name="Vendor_EditPanel_Base">
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="HelpText" inherits="GameFontHighlightSmall" justifyV="TOP" justifyH="LEFT">
					<Size x="1" y="32"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="10" y="-12"/>
						<Anchor point="TOPRIGHT" x="-10" y="-12"/>>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self.HelpText.LocKey = self.HelpTextKey
				Vendor.LoadImplementation(self, "EditPanels");
			</OnLoad>
		</Scripts>
	</Frame>
            	
	<Frame name="Vendor_EditPanel_Matches" inherits="Vendor_EditPanel_Base" virtual="true">
		<KeyValues>
			<KeyValue key="HelpTextKey" value="EDITRULE_MATCHES_TAB_TEXT" type="string"/>
			<KeyValue key="Implementation" value="MatchesPanel" type="string"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="Matches" inherits="Vendor_ItemList">
				<KeyValues>
					<KeyValue key="EmptyTextKey" value="EDITRULE_NO_MATCHES" type="string"/>
					<KeyValue key="isReadOnly" value="true" type="boolean"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.HelpText" relativePoint="BOTTOMLEFT" x="0" y="-6"/>
					<Anchor point="BOTTOMRIGHT" x="-6" y="6"/>
				</Anchors>
			</Frame>
		</Frames>
	</Frame>


	<Frame name="Vendor_EditPanel_ItemInfo" inherits="Vendor_EditPanel_Base" virtual="true">
		<KeyValues>
			<KeyValue key="HelpTextKey" value="EDITRULE_ITEMINFO_TAB_TEXT" type="string"/>
			<KeyValue key="Implementation" value="ItemInfoPanel" type="string"/>
		</KeyValues>
		<Frames>
			<Frame parentKey="View" inherits="Vendor_HtmlView">
				<Size x="200" y="48"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.HelpText" relativePoint="BOTTOMLEFT" x="0" y="-6"/>
					<Anchor point="BOTTOMRIGHT" x="-6" y="6"/>
				</Anchors>
			</Frame>
		</Frames>
		<Scripts>
			<OnMouseUp>self:Drop()</OnMouseUp>
			<OnMouseDown>self:Drop()</OnMouseDown>
		</Scripts>
	</Frame>	

	<Frame name="Vendor_EditPanel_Help" inherits="Vendor_EditPanel_Base" virtual="true">
		<KeyValues>
			<KeyValue key="Implementation" value="HelpPanel" type="string"/>
		</KeyValues>
		<Layers>
			<Layer level="ARTWORK">
				<FontString  parentKey="FilterLabel" inherits="GameFontHighlight" justifyV="CENTER" justifyH="LEFT">
					<KeyValues>
						<KeyValue key="LocKey" value="EDITRULE_FILTER_LABEL" type="string"/>
					</KeyValues>
					<Size x="50" y="30"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.HelpText"/>
					</Anchors>
				</FontString>		
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="FilterText" inherits="Vendor_Edit">
				<KeyValues>
					<KeyValue key="PlaceholderKey" value="EDITRULE_FILTER_HELPTEXT" type="string"/>
				</KeyValues>
				<Size x="1" y="30"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.FilterLabel" relativePoint="TOPRIGHT"/>
					<Anchor point="TOPRIGHT" relativeKey="$parent.HelpText"/>
				</Anchors>
			</Frame>
			<Frame parentKey="View" inherits="Vendor_FrameBorder">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.HelpText" relativePoint="BOTTOMLEFT" x="0" y="-6"/>
					<Anchor point="BOTTOMRIGHT" x="-6" y="6"/>
				</Anchors>
				<Frames>
					<ScrollFrame parentKey="Frame" inherits="UIPanelScrollFrameTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-6"/>
							<Anchor point="BOTTOMRIGHT" x="-5" y="6"/>
						</Anchors>
						<ScrollChild>
							<Frame>
								<Anchors>		
									<Anchor point="TOPLEFT"/>
								</Anchors>													
							</Frame>
						</ScrollChild>
					</ScrollFrame>
					<Frame hidden="true" parentKey="Empty">
						<Anchors>
							<Anchor point="TOPLEFT" x="5" y="-6"/>
							<Anchor point="BOTTOMRIGHT" x="-5" y="6"/>
						</Anchors>
						<Layers>
							<Layer level="ARTWORK">
								<FontString  parentKey="Text" inherits="GameFontHighlight" justifyV="TOP" justifyH="CENTER">
									<Anchors>
										<Anchor point="TOPLEFT" x="8" y="-8"/>
										<Anchor point="BOTTOMRIGHT" x="-8" y="8"/>
									</Anchors>
								</FontString>
							</Layer>		
						</Layers>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
		<Scripts>
			<OnShow>self:OnShow()</OnShow>
			<OnHide>self:OnHide()</OnHide>
		</Scripts>
	</Frame>	

	<!-- Documentation panels -->
	<Frame name="Vendor_Doc_Header" virtual="true">
		<Size x="2" y="20"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GameFontNormal" justifyV="CENTER" justifyH="LEFT">
					<Size x="1" y="20"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="8"/>
						<Anchor point="BOTTOMRIGHT" x="-8" />
					</Anchors>
				</FontString>
				<Texture>
					<Size x="2" y="1"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="2" y="2"/>
						<Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
					</Anchors>
					<Color r="0.5" g="0.5" b="0.5" a="0.25"/>
				</Texture>
			</Layer>
		</Layers>
	</Frame>


	<!-- Fonts used for the documentation -->
	<Font virtual="true" name="Vendor_Doc_BodyText" inherits="GameFontHighlight" justifyH="LEFT" spacing="2"/>
	<Font virtual="true" name="Vendor_Doc_SubHeader" inherits="GameFontNormal" justifyH="LEFT" spacing="2"/>
	<Font virtual="true" name="Vendor_Doc_Extension" inherits="GameFontNormalSmall" justifyH="LEFT" spacing="1"/>

</Ui>