<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="rulespanels.lua"/>

	<!-- Help Rules Panel -->
	<Frame name="Vendor_Base_RulesPanel" virtual="true" inherits="Vendor_TabPanel_Base">
		<Layers>
			<Layer level="ARTWORK">
				<FontString justifyH="LEFT" justifyV="TOP" inherits="GameFontHighlightSmall" parentKey="HelpText">
					<Anchors>
						<Anchor point="TOPLEFT" x="16" y="-16"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="-16" y="-52"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>Vendor.RulesPanel.onInit(self)</OnLoad>
		</Scripts>
	</Frame>

	<EditBox name="Vendor_Url" virtual="true" font="GameFontHighlight" parentKey="Url" multiLine="false">
		<Scripts>
			<OnLoad>Vendor.UrlEditBox.OnLoad(self)</OnLoad>
		</Scripts>
	</EditBox>

	<Frame name="Vendor_RulesDialog_Help" virtual="true" inherits="Vendor_Base_RulesPanel">
		<KeyValues>
			<KeyValue key="HelpTextKey" value="RULES_DIALOG_HELP_HEADING" type="string"/>
			<KeyValue key="Implementation" value="HelpPanel" type="string"/>
		</KeyValues>
		<Layers>
			<Layer level="ARTWORK">
				<FontString justifyH="LEFT" justifyV="MIDDLE" inherits="GameFontNormal" parentKey="UrlLabel" text="Project:">
					<Size x="80" y="20"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.HelpText" relativePoint="BOTTOMLEFT" y="-12" x="24"/>
					</Anchors>
				</FontString>
				<FontString justifyH="LEFT" justifyV="MIDDLE" inherits="GameFontNormal" parentKey="TutorialLabel" text="Tutorial:">
					<Size x="100" y="20"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.UrlLabel" relativePoint="BOTTOMLEFT" y="-4"/>
						<Anchor point="RIGHT" relativeKey="$parent.UrlLabel"/>
					</Anchors>
				</FontString>
				<FontString justifyH="LEFT" justifyV="MIDDLE" inherits="GameFontNormal" parentKey="ReleaseNotes" text="Release Notes:">
					<Size x="100" y="24"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.HelpText"/>
						<Anchor point="TOP" relativeKey="$parent.TutorialLabel" y="-20" relativePoint="BOTTOM"/>
					</Anchors>
				</FontString>				
			</Layer>			
		</Layers>
		<Frames>
			<EditBox inherits="Vendor_Url" parentKey="Url">
				<KeyValues>
					<KeyValue key="UrlKey" value="VENDOR_URL" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeKey="$parent.UrlLabel" x="4"/>
					<Anchor point="RIGHT" relativeKey="$parent.HelpText"/>
					<Anchor point="BOTTOM" relativeKey="$parent.UrlLabel"/>
				</Anchors>
			</EditBox>
			<EditBox inherits="Vendor_Url" parentKey="Tutorial">
				<KeyValues>
					<KeyValue key="UrlKey" value="VENDOR_TUTORIAL" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeKey="$parent.TutorialLabel" x="4"/>
					<Anchor point="RIGHT" relativeKey="$parent.HelpText"/>
					<Anchor point="BOTTOM" relativeKey="$parent.TutorialLabel"/>
				</Anchors>
			</EditBox>
			<Frame name="VendorRulesHelpPanelReleaseVersion" parentKey="ReleaseVersion" inherits="UIDropDownMenuTemplate">
				<Size x="200" y="20" />
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeKey="$parent.ReleaseNotes" x="-18"/>
					<Anchor point="RIGHT" relativeKey="$parent.HelpText"/>
					<Anchor point="BOTTOM" relativeKey="$parent.ReleaseNotes"/>
				</Anchors>
			</Frame>
			<Frame inherits="TooltipBorderBackdropTemplate" parentKey="Outline">
				<KeyValues>
					<KeyValue key="backdropBorderColor" value="LIGHTGRAY_FONT_COLOR" type="global"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="-12" relativeKey="$parent.ReleaseNotes" relativePoint="BOTTOMLEFT"/>
					<Anchor point="RIGHT" x="0" y="-12" relativeKey="$parent.HelpText" relativePoint="RIGHT"/>
					<Anchor point="BOTTOM"  y="12"/>
				</Anchors>			
			</Frame>
			<ScrollFrame name="$parentHelpScrollFrame" parentKey="ReleaseNotesText"  inherits="UIPanelScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.Outline" x="12" y="-12"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Outline" x="-12" y="12"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="ScrollbarBg" />
					</Layer>
				</Layers>
				<ScrollChild>
					<SimpleHTML parentKey="content" font="GameFontNormalSmall">
						<Size x="200" y="10"/>
						<FontString inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="TOP" spacing="4"/>
						<FontStringHeader1 inherits="GameFontHighlightLarge" spacing="8" justifyH="CENTER" justifyV="TOP"/>
						<FontStringHeader2 inherits="GameFontHighlight" spacing="4" justifyH="LEFT" justifyV="TOP"/>
						<FontStringHeader3 inherits="GameFontHighlightSmall" spacing="4" justifyH="LEFT" justifyV="TOP"/>
					</SimpleHTML>
				</ScrollChild>
				<Scripts>
					<OnLoad>self.ScrollbarBg:SetColorTexture(GRAY_FONT_COLOR.r, GRAY_FONT_COLOR.g, GRAY_FONT_COLOR.b, 0.25)</OnLoad>
				</Scripts>
			</ScrollFrame>
		</Frames>
	</Frame>
</Ui>
